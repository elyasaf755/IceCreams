<local:PageBase x:TypeArguments="vm:StoreViewModel" x:Class="IceCreams.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IceCreams"
      xmlns:vm="clr-namespace:ViewModels;assembly=ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{Binding CurrentStore.Name}">

    <Page.Resources>
        <BitmapImage x:Key="DesignSource" UriSource="pack://application:,,,/Images/shop4.png"/>
    </Page.Resources>

    <!--{Binding CurrentStore.PictureUrl, Converter={local:ImageSourceConverter}}-->
    <Grid d:DataContext="{x:Static vm:StoreDesignViewModel.Instance}">
        <StackPanel Orientation="Horizontal">
            <Image Height="200" Width="200" Stretch="Fill"
                   Source="{Binding CurrentStore.PictureUrl, Converter={local:ImageSourceConverter}, FallbackValue={StaticResource DesignSource}}" />
            <TextBlock Text="{Binding CurrentStore.Name}" FontSize="30" VerticalAlignment="Center" TextAlignment="Center" />
        </StackPanel>
    </Grid>
</local:PageBase>
